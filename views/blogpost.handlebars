{{!-- ! This file contains blogpost html --}}

<div class="blogpost">
    <h2 class="post-title">{{blogPost.name}}</h2>
    <p class="main-desc">{{blogPost.description}}</p>
    <p class="created-by">Created by {{blogPost.user.name}} </p>
    <p> Created on {{ blogPost.date_created }}</p>
    <p>
      <div>
        {{!-- <a href="/updatePost"><button class="update-btn" data-id="{{blogPost.id}}">Update</button></a> --}}
      </div>
    </p>
</div>

<form class="new-comment-form" data-id="{{id}}">
  <div class="comments">
    <h3 class="add-comment">Add a Comment!</h3>
      <input class="title-input" type="text" id="comment" name="post-title"></input>
      <button type="submit" class="post-comment" id="postComment" data-id="{{id}}">Post comment</button>
  </div>
</form>
  <h3 class="comment-title">Comments: </h3>
    {{#each comment as |comment|}}
    <section class="comment">
        <header class="card-header bg-dark comment-header">
        </header>
        <div class="mb-3 p-3">
            <p>{{comment.content}}</p>
            <p> Commented By: {{comment.user_id}} </p>
             <p> Commented On:  {{comment.date_created}}</p>
            {{!-- <span class="text-dark">-{{comment.user.username}} {{format_date comment.date_created}}</span> --}}
        </div>
    </section>
    {{/each}}
</div>

{{!-- Link with stylesheet and script --}}
<script src="/js/newComment.js"></script>
<link rel="stylesheet" href="/css/blogpost.css">
