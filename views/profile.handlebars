<div class="profile-main">
  <div class="row">
    <div class="col-auto">
      <h2>Welcome, {{name}}! </h2>
    </div>
  </div>

<div class="new-post">
    <a href="/newPost">New Post!</a>
  </div>
</div>

<div class="profile-posts">
  {{#if blogPost.length}}
  <div class="col-md-6">
    <h3>Your Posts:</h3>

    {{#each blogPost as |blogPost|}}
    {{!-- compare logged_on.id to id in the post & only see logged on users posts --}}
    {{!-- If user.userName === blogPost.user_id --}}
    {{!-- {{#if (user.userName = blogPost.user_id)}} --}}
    <div class="row mb-2">
      <div class="col-md-8">
        <a href="/blogPost/{{this.id}}"><h4 class="post-title-link">{{this.name}}</h4></a>
      </div>
      <div class="col-md-4">
        <button class="post-list btn-sm btn-danger" data-id="{{blogPost.id}}">Delete</button>
      </div>
      <div>
        <button class="update-btn" data-id="{{blogPost.id}}">Update</button>
      </div>
    </div>
      {{!-- {{/if}} --}}
    {{/each}}
  </div>
  {{/if}}
</div>


{{!-- Link with stylesheet and script --}}
<script src="./js/profile.js"></script>
<link rel="stylesheet" href="/css/profile.css">



